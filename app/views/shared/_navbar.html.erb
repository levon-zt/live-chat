<nav class="navbar navbar-expand-lg bg-body-tertiary border-bottom">
  <div class="container-fluid">
    <%= link_to "Chat Room App", root_path, class: "nav-link" %>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div>
      <% if Current.user == nil %>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Sign In", sign_in_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Sign Up", sign_up_path, class: "nav-link" %>
          </li>
        </ul>
      <% else %>
        <div class="d-flex">
          <button type="button" class="btn btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#searchUsers">
            Search Users
          </button>
          <div class="dropdown">
            <button class="btn dropdown-toggle" data-bs-toggle="dropdown"><%= Current.user.email %></button>
            <ul class="dropdown-menu">
              <li><%= button_to "Log out", sign_out_path, class: "dropdown-item", method: :delete %></li>
            </ul>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>

<%= render partial: "search_modal"%>