<% if chat_room_id == chat_room_message.chat_room_user.chat_room_id %>
  <%= turbo_frame_tag dom_id(chat_room_message), data: {'controller': 'chatRoomMessage', 'chatRoomMessage-target': 'message'} do %>
    <div class="mb-2">
      <div class="d-flex justify-content-<%= chat_room_message.chat_room_user.user_id == message_author_id ? 'end' : 'start' %>">
        <div class="fs-12"><%= chat_room_message.created_at.strftime("%I:%M %p") %></div>
        <%= chat_room_message.chat_room_user.user_id %><%= message_author_id %>

      </div>
      <div class="d-flex justify-content-<%= chat_room_message.chat_room_user.user_id == message_author_id ? 'end' : 'start' %>">
        <div class="bg-white p-2 border rounded-<%= chat_room_message.chat_room_user.user_id == message_author_id ? 'start' : 'end' %>">
          <%= chat_room_message.message %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>